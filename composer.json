{
    "name": "jlabno/annotations-scanner",
    "description": "Annotated files scanner - looks for methods annotated with provided annotations, outputs an array of either filepaths or directories.",
    "keywords": ["library", "php", "annotation", "scanner", "finder"],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "AnnotationsScanner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AnnotationsScanner\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jakub ≈Åabno",
            "email": "kwas@outlook.com",
            "homepage": "https://github.com/jakublabno"
        }
    ],
    "require": {
        "php": "^7.4||^8.0",
        "doctrine/annotations": "^1.13",
        "psr/simple-cache": "^1.0",
        "symfony/cache": "^5.4",
        "composer/composer": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    }
}
